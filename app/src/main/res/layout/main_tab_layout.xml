<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bottom_bg"
    android:orientation="horizontal"
    android:weightSum="4">

    <TextView
        android:id="@+id/homepager_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="@dimen/tab_padding_top_size"
        android:paddingTop="@dimen/tab_padding_top_size"
        android:text="@string/homepager_tv"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tab_tv_size" />

    <TextView
        android:id="@+id/store_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="@dimen/tab_padding_top_size"
        android:paddingTop="@dimen/tab_padding_top_size"

        android:text="@string/store_tv"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tab_tv_size" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="@dimen/tab_padding_top_size"
        android:paddingTop="@dimen/tab_padding_top_size"
        android:text="@string/message_tv"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tab_tv_size" />

    <TextView
        android:id="@+id/my_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="@dimen/tab_padding_top_size"
        android:paddingTop="@dimen/tab_padding_top_size"
        android:text="@string/my_center_tv"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tab_tv_size" />

</LinearLayout>